<%= render 'shared/head', title: 'add purchase', back:true%>
<section class="purchase-section">
    <div class="purchase-container"> 
            <% if flash[:notice].present? %>
        <div class="notice">
            <%= flash[:notice] %>
        </div>
    <% end %>
        
    <div class="form-container">
        <%=form_with model: @purchase, url: category_purchases_path, method: :post do|form| %>
        <div class="border p-5 h-[80vh]">
            <%= form.text_field :name, required: true, placeholder: "Enter New Purchase", class: 'px-5 py-2 border-b w-[90%] mx-auto block outline-none text-[20px] mb-5 '%>
            <%= form.number_field :amount, required: true, placeholder: "Amount (USD)", class: 'px-5 py-2 border-b w-[90%] mx-auto block outline-none text-[20px] '%>
        </div>


         <div class="add-category-container flex justify-center px-5 py-7">
            <%= form.submit "Create Purchase", class: ' create-category border border-white text-center px-7 text-white py-3 w-[80%] uppercase'%>
        </div>
        
        <% end %>

    </div>

    </div>
</section>